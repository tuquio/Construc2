<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension version="2.5" type="template" group="widgets" client="site" method="upgrade">
	<config>
		<fields name="params">
		<!-- core functions for Construc2 and things with technical merit -->
		<fieldset name="general" addfieldpath="/templates/construc2/elements" />

		<!--
		Most Widgets would plug into the "widgets" parameter group.
		Possible panel groups to plug into:
			> widgets   : add or generate visual output
			> javascript: add or mess with javascript files and scripts
			> standards : provide SHims or other means of webstandards compatibility
		 -->

			<fieldset name="widgets">
				<field type="widget" name="widgetDate" default="0" label="TPL_CONSTRUC2_DATECONTAINER_LABEL" description="TPL_CONSTRUC2_DATECONTAINER_DESC">
					<option value="1">JShow</option>
					<option value="0">JHide</option>
				</field>
				<field type="widget" name="widgetDateFormat" default="4" label="TPL_CONSTRUC2_DATEFORMAT_LABEL" description="TPL_CONSTRUC2_DATEFORMAT_DESC">
					<option value="" >DATE_FORMAT_LC</option>
					<option value="1">DATE_FORMAT_LC1</option>
					<option value="2">DATE_FORMAT_LC2</option>
					<option value="3">DATE_FORMAT_LC3</option>
					<option value="4">DATE_FORMAT_LC4</option>
				</field>
				<field type="widget" name="fontscaler" default="0" label="TPL_CONSTRUC2_FONTSCALER_LABEL" description="TPL_CONSTRUC2_FONTSCALER_DESC">
					<option value="1">JShow</option>
					<option value="0">JHide</option>
				</field>
				<field type="widget" name="styleswitch" default="0" label="TPL_CONSTRUC2_STYLESWITCH_LABEL" description="TPL_CONSTRUC2_STYLESWITCH_DESC">
					<option value="1">JShow</option>
					<option value="0">JHide</option>
				</field>
			</fieldset>
		</fields>
	</config>

	<updateservers>
		<server type="extension">http://joomla.webmechanic.biz/tpl/addons.xml?widgets</server>
	</updateservers>

</extension>
