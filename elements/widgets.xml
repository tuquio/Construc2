<?xml version="1.0" encoding="utf-8"?>
<widgets version="2.0" type="template">
	<config>
		<fields name="params">
		<!--
		Third Party Widgets should plug into the "widgets" parameter group.

		Possible panel groups to plug into:
			> widgets   : add or generate visual output
			> javascript: add or mess with javascript files and scripts
			> standards : provide SHims or other means of webstandards compatibility
		 -->
			<fieldset name="widgets" addfieldpath="/templates/construc2/elements" >
				<field name="widgetDate" type="feature" default="0" label="TPL_CONSTRUC2_ENABLE_DATECONTAINER_LABEL" description="TPL_CONSTRUC2_ENABLE_DATECONTAINER_DESC">
					<option value="1">JShow</option>
					<option value="0">JHide</option>
				</field>
				<field name="widgetDateFormat" type="feature" default="4" label="TPL_CONSTRUC2_DATEFORMAT_LABEL" description="TPL_CONSTRUC2_DATEFORMAT_DESC">
					<option value="" >DATE_FORMAT_LC</option>
					<option value="1">DATE_FORMAT_LC1</option>
					<option value="2">DATE_FORMAT_LC2</option>
					<option value="3">DATE_FORMAT_LC3</option>
					<option value="4">DATE_FORMAT_LC4</option>
				</field>
			</fieldset>
		</fields>
	</config>

	<updateservers>
		<server type="extension">http://joomla.webmechanic.biz/tpl/addons.xml?widgets</server>
	</updateservers>

</widgets>
