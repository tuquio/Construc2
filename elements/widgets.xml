<?xml version="1.0" encoding="utf-8"?>
<form>
<!--
Most Widgets would plug into the "widgets" parameter group (fieldset).
Possible panel groups to plug into:
	> widgets    : add or generate visual output
	> standards  : provide SHims or other means of webstandards compatibility
	> javascripts: add or mess with javascript files and scripts
 -->

	<fields name="params">
		<fieldset name="widgets">
			<field type="radio" name="widgetDate" default="0" label="Widget_widgetDate" description="Widget_widgetDate_Desc">
				<option value="1">JShow</option>
				<option value="0">JHide</option>
			</field>

            <field type="list" name="dateFormat" default="4" label="Widget_dateFormat" description="Widget_dateFormat_Desc">
				<option value="" >DATE_FORMAT_LC</option>
				<option value="1">DATE_FORMAT_LC1</option>
				<option value="2">DATE_FORMAT_LC2</option>
				<option value="3">DATE_FORMAT_LC3</option>
				<option value="4">DATE_FORMAT_LC4</option>
			</field>

			<field type="radio" name="fontscaler" default="0" label="Widget_Fontscaler" description="Widget_Fontscaler_Desc">
				<option value="1">JShow</option>
				<option value="0">JHide</option>
			</field>

			<field type="radio" name="styleswitch" default="0" label="Widget_Styleswitcher" description="Widget_Styleswitcher_Desc">
				<option value="1">JShow</option>
				<option value="0">JHide</option>
			</field>
		</fieldset>
	</fields>

	<!-- EXPERIMENTAL : type and location are in flux -->
	<updateservers>
		<server type="package">http://joomla.webmechanic.biz/tpl/kaskade/pkg_widgets.xml</server>
	</updateservers>

