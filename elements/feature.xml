<?xml version="1.0" encoding="utf-8"?>
<features version="2.0" type="template">
	<config>
		<fields name="params">
		<!-- 
		Third Party Features should plug into the "features" parameter group.

		Possible panel groups to plug into:
			> general    : core functions and things with technical merit
			> features   : the win and doubt group for almost anything
			> javascript : add or mess with javascript files and scripts
			> standards  : provide Shims, Shivs, and other means of webstandards compatibility
			> maintenance: callbacks for the Backend Maintenance Plugin
		 -->
		 
		 <!-- core functions for Construc2 and things with technical merit -->
			<fieldset name="general" addfieldpath="/templates/construc2/elements" >
			</fieldset>

		<!-- the win and doubt group for almost anything -->
			<fieldset name="features">
				<field name="html5manifest" type="feature" default="0" label="TPL_CONSTRUC2_HTML5MANIFEST_LABEL" description="TPL_CONSTRUC2_HTML5MANIFEST_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
			</fieldset>

			<fieldset name="standards" description="TPL_CONSTRUC2_STANDARDS_DESC">
				<field name="prefixfree" type="feature" default="0" label="TPL_CONSTRUC2_PREFIXFREE_LABEL" description="TPL_CONSTRUC2_PREFIXFREE_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field name="cfinstall" type="feature" default="0" label="TPL_CONSTRUC2_CFINSTALL_LABEL" description="TPL_CONSTRUC2_CFINSTALL_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field name="browserchoice" type="feature" default="0" label="TPL_CONSTRUC2_BROWSERCHOICE_LABEL" description="TPL_CONSTRUC2_BROWSERCHOICE_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
			</fieldset>
		</fields>
	</config>

	<updateservers>
		<server type="extension">http://joomla.webmechanic.biz/tpl/addons.xml?features</server>
	</updateservers>

</features>
