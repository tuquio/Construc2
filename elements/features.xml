<?xml version="1.0" encoding="utf-8"?>
<form>
<!--
Most Features would plug into the "features" parameter group (fieldset).
Possible panel groups to plug into:
	> features   : the win and doubt group for almost anything
	> standards  : provide Shims, Shivs, and other means of webstandards compatibility
	> quirks     : nice to have a sim, shiv or polyfill in here
	> javascripts: add or mess with javascript files and scripts
 -->

	<fields name="params">
		<!-- basic = core features or things with technical merit -->
		<field  fieldset="basic"  name="setGeneratorTag" type="text" default="" label="Basic_setGeneratorTag" description="Basic_setGeneratorTag_Desc" size="56" />

		<!-- features = the win and doubt group for almost anything -->
		<field  fieldset="features"  name="diagnostics" type="radio" default="0" label="Standards_diagnostics" description="Standards_diagnostics_Desc">
			<option value="1">JShow</option>
			<option value="0">JHide</option>
		</field>

		<field  fieldset="standards"  name="prefixfree" type="radio" default="0" label="Standards_prefixfree" description="Standards_prefixfree_Desc">
			<option value="1">JYes</option>
			<option value="0">JNo</option>
		</field>

		<field  fieldset="standards"  name="html5manifest" type="radio" default="0" label="Standards_html5manifest" description="Standards_html5manifest_Desc">
			<option value="1">JYes</option>
			<option value="0">JNo</option>
		</field>

		<fieldset name="quirks">
			<field type="radio" handler="msie" name="msieEdge" default="0" label="Quirks_msieEdge" description="Quirks_msieEdge_Desc">
				<option value="1">JYes</option>
				<option value="0">JNo</option>
			</field>
			<field type="radio" handler="msie" name="msieMetroActivex" default="0" label="Quirks_msieMetroActivex" description="Quirks_msieMetroActivex_Desc">
				<option value="1">JYes</option>
				<option value="0">JNo</option>
			</field>
			<field type="radio" handler="msie" name="msieMeta" default="0" label="Quirks_msieMeta" description="Quirks_msieMeta_Desc">
				<option value="1">JYes</option>
				<option value="0">JNo</option>
			</field>
			<field type="radio" handler="msie" name="msieBrowserchoice" default="0" label="Quirks_msieBrowserchoice" description="Quirks_msieBrowserchoice_Desc">
				<option value="1">JYes</option>
				<option value="0">JNo</option>
			</field>
			<field type="radio" handler="msie" name="msieCfinstall" default="0" label="Quirks_msieCfinstall" description="Quirks_msieCfinstall_Desc">
				<option value="1">JYes</option>
				<option value="0">JNo</option>
			</field>
		</fieldset>
	</fields>

	<!-- EXPERIMENTAL : type and location are in flux -->
	<updateservers>
		<server type="package">http://joomla.webmechanic.biz/tpl/kaskade/pkg_features.xml</server>
	</updateservers>

