<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension version="2.5" type="template" group="features" client="site" method="upgrade">
	<config>
		<fields name="params">
		<!-- core functions and things with technical merit -->
		<fieldset name="general" addfieldpath="/templates/construc2/elements/features" />

		<!--
		Most Features would plug into the "features" parameter group.
		Possible panel groups to plug into:
			> features   : the win and doubt group for almost anything
			> standards  : provide Shims, Shivs, and other means of webstandards compatibility
			> quirks     : nice to have a sim, shiv or polyfill in here
			> javascript : add or mess with javascript files and scripts
		 -->

		<!-- the win and doubt group for almost anything -->
			<fieldset name="features">
				<field type="feature" name="diagnostics" default="0" label="Standards_Feature_diagnostics" description="Standards_Feature_diagnostics_Desc">
					<option value="1">JShow</option>
					<option value="0">JHide</option>
				</field>
			</fieldset>

			<fieldset name="standards">
				<field type="feature" name="prefixfree" default="0" label="Standards_Feature_prefixfree" description="Standards_Feature_prefixfree_Desc">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
			</fieldset>

			<fieldset name="quirks">
				<field type="feature" handler="msie" name="msieBho" default="0" label="Quirks_Feature_msieBho" description="Quirks_Feature_msieBho_Desc">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field type="feature" handler="msie" name="msieBrowserchoice" default="0" label="Quirks_Feature_msieBrowserchoice" description="Quirks_Feature_msieBrowserchoice_Desc">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field type="feature" handler="msie" name="msieCfinstall" default="0" label="Quirks_Feature_msieCfinstall" description="Quirks_Feature_msieCfinstall_Desc">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field type="feature" handler="msie" name="msieEdge" default="0" label="Quirks_Feature_msieEdge" description="Quirks_Feature_msieEdge_Desc">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
			</fieldset>

		</fields>
	</config>

	<updateservers><!-- EXPERIMENTAL : type and location are in flux -->
		<server type="template">http://joomla.webmechanic.biz/tpl/kaskade/features.xml</server>
	</updateservers>

</extension>
