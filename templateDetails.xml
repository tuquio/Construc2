			<fieldset name="typography" description="TPL_CONSTRUCT_GOOGLE_WEB_FONT">
				<field name="googleWebFontApi" type="text" default="" label="Web Fonts API Key" description="To retrieve the dynamic list of web fonts offered by the Google Web Fonts service enter your Web Fonts API key: http://code.google.com/intl/de-DE/apis/webfonts/docs/developer_api.html" size="50" />
				<field name="googleWebFont1" type="googlewebfont" default="" label="TPL_CONSTRUCT_GOOGLE_WEB_FONT_LABEL" description="TPL_CONSTRUCT_GOOGLE_WEB_FONT_DESC" />
				<field name="googleWebFontTargets1" type="text" default="h1,h2,h3,h4,h5,h6" label="TPL_CONSTRUCT_GOOGLE_WEB_FONT_TARGETS_LABEL" description="TPL_CONSTRUCT_GOOGLE_WEB_FONT_TARGETS_DESC" size="50" />
				<field name="googleWebFontSize1" type="text" default="" label="TPL_CONSTRUCT_GOOGLE_WEB_FONT_SIZE_LABEL" description="TPL_CONSTRUCT_GOOGLE_WEB_FONT_SIZE_DESC" size="5" />
				<field type="spacer" default=" " />
				<field name="googleWebFont2" type="googlewebfont" default="" label="TPL_CONSTRUCT_GOOGLE_WEB_FONT_LABEL" description="TPL_CONSTRUCT_GOOGLE_WEB_FONT_DESC" />
				<field name="googleWebFontTargets2" type="text" default="" label="TPL_CONSTRUCT_GOOGLE_WEB_FONT_TARGETS_LABEL" description="TPL_CONSTRUCT_GOOGLE_WEB_FONT_TARGETS_DESC" size="50"/>
				<field name="googleWebFontSize2" type="text" default="" label="TPL_CONSTRUCT_GOOGLE_WEB_FONT_SIZE_LABEL" description="TPL_CONSTRUCT_GOOGLE_WEB_FONT_SIZE_DESC" size="5" />
				<field type="spacer" default=" " />
				<field name="googleWebFont3" type="googlewebfont" default="" label="TPL_CONSTRUCT_GOOGLE_WEB_FONT_LABEL" description="TPL_CONSTRUCT_GOOGLE_WEB_FONT_DESC" />
				<field name="googleWebFontTargets3" type="text" default="" label="TPL_CONSTRUCT_GOOGLE_WEB_FONT_TARGETS_LABEL" description="TPL_CONSTRUCT_GOOGLE_WEB_FONT_TARGETS_DESC" size="50" />
				<field name="googleWebFontSize3" type="text" default="" label="TPL_CONSTRUCT_GOOGLE_WEB_FONT_SIZE_LABEL" description="TPL_CONSTRUCT_GOOGLE_WEB_FONT_SIZE_DESC" size="5" />
			</fieldset>

			<fieldset name="IE" description="TPL_CONSTRUCT_IE_DESC">
				<field name="loadGcf" type="radio" default="0" label="TPL_CONSTRUCT_CHROME_FRAME_LABEL" description="TPL_CONSTRUCT_CHROME_FRAME_DESC">
		        	<option value="1.0.2">JYes</option><!-- field value = version number-->
		        	<option value="0">JNo</option>
		    	</field>
				<field name="IECSS3" type="radio" default="1" label="TPL_CONSTRUCT_IE_CSS3_LABEL" description="TPL_CONSTRUCT_IE_CSS3_DESC">
		        	<option value="1">JYes</option>
		        	<option value="0">JNo</option>
		    	</field>
				<field name="IECSS3Targets" type="textarea" default=".drop-shadow, .outline, .rounded, ul.menu li" label="TPL_CONSTRUCT_IE_CSS3_TARGETS_LABEL" description="TPL_CONSTRUCT_IE_CSS3_TARGETS_DESC" rows="5" cols="50" />
				<field name="IE6TransFix" type="radio" default="1" label="TPL_CONSTRUCT_IE6_TRANS_FIX_LABEL" description="TPL_CONSTRUCT_IE6_TRANS_FIX_DESC">
		        	<option value="1">JYes</option>
		        	<option value="0">JNo</option>
		    	</field>
				<field name="IE6TransFixTargets" type="textarea" default="h1 a" label="TPL_CONSTRUCT_IE6_TRANS_FIX_TARGETS_LABEL" description="TPL_CONSTRUCT_IE6_TRANS_FIX_TARGETS_DESC" rows="5" cols="50" />
			</fieldset>
		</fields>
	</config>

