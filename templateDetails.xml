<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension version="2.5" type="template" client="site" method="upgrade" >
	<name>Construc2</name>
	<creationDate>2011-06-20</creationDate>
	<author>WebMechanic</author>
	<authorEmail>joomla@webmechanic.biz</authorEmail>
	<authorUrl>http://joomla.webmechanic.biz</authorUrl>
	<copyright>Copyright (C)2011-2012 WebMechanic. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.9.15</version>
	<description>TPL_CONSTRUC2_DESCRIPTION</description>
	<credits><![CDATA[Inspired by "Construct Community", Matt Thomas, Joomla Engineering. See CREDITS.php]]></credits>

	<positions>
		<position>nav</position>
		<position>breadcrumbs</position>
		<position>header</position>
		<position>footer</position>
		<position>syndicate</position>
		<position>analytics</position>
		<position>stealth</position>
		<position>column-1</position>
		<position>column-2</position>
		<position>column-3</position>
		<position>column-4</position>
		<position>nav-below-1</position>
		<position>nav-below-2</position>
		<position>nav-below-3</position>
		<position>nav-below-4</position>
		<position>content-above-1</position>
		<position>content-above-2</position>
		<position>content-above-3</position>
		<position>content-above-4</position>
		<position>content-below-1</position>
		<position>content-below-2</position>
		<position>content-below-3</position>
		<position>content-below-4</position>
		<position>header-above-1</position>
		<position>header-above-2</position>
		<position>header-above-3</position>
		<position>header-above-4</position>
		<position>header-below-1</position>
		<position>header-below-2</position>
		<position>header-below-3</position>
		<position>header-below-4</position>
		<position>footer-above-1</position>
		<position>footer-above-2</position>
		<position>footer-above-3</position>
		<position>footer-above-4</position>
		<position>debug</position>
		<position>offline</position>
		<position>print-popup</position>
	</positions>

	<config>
		<fields name="params">
			<fieldset name="general" addfieldpath="/templates/construc2/elements" >
				<field name="customStyleSheet" type="filelist" default=""
						label="TPL_CONSTRUC2_CUSTOM_STYLE_SHEET_LABEL"
						description="TPL_CONSTRUC2_CUSTOM_STYLE_SHEET_DESC"
						directory="templates/construc2/themes"
						filter="\.css"
						exclude="(template|editor|tinymce|codemirror|jce|ie\d+|test.+|x~.+)\.css"
					/>
				<field name="ssiIncludes" type="radio" default="0" label="TPL_CONSTRUC2_ENABLE_APACHESSI_LABEL" description="TPL_CONSTRUC2_ENABLE_APACHESSI_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field name="ssiTheme" type="filelist" default=""
						label="TPL_CONSTRUC2_SSITHEME_LABEL"
						description="TPL_CONSTRUC2_SSITHEME_LABEL"
						directory="templates/construc2/themes"
						filter="\.styles"
					/>
				<field name="modOocss" type="radio" default="0" label="TPL_CONSTRUC2_USE_MODOOCSS_LABEL" description="TPL_CONSTRUC2_USE_MODOOCSS_DESC">
					<option value="1">On</option>
					<option value="0">Off</option>
				</field>
			</fieldset>

			<fieldset name="features">
				<field name="setGeneratorTag" type="text" default="" label="TPL_CONSTRUC2_CUSTOM_GENERATOR_TAG" description="TPL_CONSTRUC2_CUSTOM_GENERATOR_TAG_DESC" size="56" />
				<field name="enableSwitcher" type="radio" default="0" label="TPL_CONSTRUC2_ENABLE_SWITCHER_LABEL" description="TPL_CONSTRUC2_ENABLE_SWITCHER_DESC">
					<option value="1">JShow</option>
					<option value="0">JHide</option>
				</field>
				<field name="showDiagnostics" type="radio" default="0" label="TPL_CONSTRUC2_ENABLE_DIAGNOSTICS_LABEL" description="TPL_CONSTRUC2_ENABLE_DIAGNOSTICS_DESC">
					<option value="1">JShow</option>
					<option value="0">JHide</option>
				</field>
				<field name="showDateContainer" type="radio" default="0" label="TPL_CONSTRUC2_ENABLE_DATECONTAINER_LABEL" description="TPL_CONSTRUC2_ENABLE_DATECONTAINER_DESC">
					<option value="1">JShow</option>
					<option value="0">JHide</option>
				</field>
				<field name="dateFormat" type="list" default="4" label="TPL_CONSTRUC2_DATEFORMAT_LABEL" description="TPL_CONSTRUC2_DATEFORMAT_DESC">
					<option value="" >DATE_FORMAT_LC</option>
					<option value="1">DATE_FORMAT_LC1</option>
					<option value="2">DATE_FORMAT_LC2</option>
					<option value="3">DATE_FORMAT_LC3</option>
					<option value="4">DATE_FORMAT_LC4</option>
				</field>
			</fieldset>

			<fieldset name="javascript">
				<field name="loadMoo" type="list" default="2" label="TPL_CONSTRUC2_LOAD_MOO_LABEL" description="TPL_CONSTRUC2_LOAD_MOO_DESC">
					<option value="2">JDEFAULT</option>
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
<!--
				<field name="loadMooSrc" type="cdnlist" members="mootools" default="ajax.googleapis.com" label="TPL_CONSTRUC2_MOOSRC_LABEL" description="TPL_CONSTRUC2_MOOSRC_DESC" />
 -->
				<field name="loadModal" type="radio" default="0" label="TPL_CONSTRUC2_LOAD_MODAL" description="TPL_CONSTRUC2_LOAD_MODAL_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>

				<field name="loadjQuery" type="jqueryversion" default="" label="TPL_CONSTRUC2_LOAD_JQUERY_LABEL" description="TPL_CONSTRUC2_LOAD_JQUERY_DESC" />
				<field name="loadjQuerySrc" type="cdnlist" members="jquery" default="ajax.googleapis.com" label="TPL_CONSTRUC2_JQUERYSRC_LABEL" description="TPL_CONSTRUC2_JQUERYSRC_DESC" />

				<field name="headCleanup" type="radio" default="0" label="TPL_CONSTRUC2_ENABLE_HEADCLEANUP_LABEL" description="TPL_CONSTRUC2_ENABLE_HEADCLEANUP_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
			</fieldset>

			<fieldset name="compat" description="TPL_CONSTRUC2_COMPAT_DESC">
				<field name="html5shim" type="radio" default="1" label="TPL_CONSTRUC2_HTML5_LABEL" description="TPL_CONSTRUC2_HTML5_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field name="html5manifest" type="radio" default="0" label="TPL_CONSTRUC2_ENABLE_HTML5MANIFEST_LABEL" description="TPL_CONSTRUC2_ENABLE_HTML5MANIFEST_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field name="prefixfree" type="radio" default="0" label="TPL_CONSTRUC2_PREFIXFREE_LABEL" description="TPL_CONSTRUC2_PREFIXFREE_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field name="loadGcf" type="radio" default="0" label="TPL_CONSTRUC2_CHROME_FRAME_LABEL" description="TPL_CONSTRUC2_CHROME_FRAME_DESC">
					<option value="1.0.2">JYes</option><!-- field value = version number-->
					<option value="0">JNo</option>
				</field>
			</fieldset>
<!--
			<!** stub for themes to plug-in optional parameters **>
			<fieldset name="theme">
				<field name="theme_note" type="spacer" label="Custom_Theme_Parameters" description="Custom_Theme_Parameters_Desc" class="tpl-theme" />
			</fieldset>

			<!** stub for the extended backend plugin and maintenance tools **>
			<fieldset name="maintenance">
				<field name="maintenance_note" type="spacer" label="Maintenance_Plugin_Slot" description="Maintenance_Plugin_Slot_Desc" class="tpl-plugin" />
			</fieldset>
 -->

		</fields>
	</config>

	<files>
		<folder>css</folder>
		<folder>elements</folder>
		<folder>html</folder>
		<!-- <folder>images</folder> -->
		<folder>js</folder>
		<folder>language</folder>
		<folder>layouts</folder>
		<folder>themes</folder>
		<filename>component.php</filename>
		<filename>construc2.manifest</filename>
		<filename>construc2_rtl.manifest</filename>
		<filename>CREDITS.php</filename>
		<filename>embed.php</filename>
		<filename>error.php</filename>
		<!-- <filename>gz.php</filename> -->
		<filename>htaccess.txt</filename>
		<filename>index.php</filename>
		<filename>modal.php</filename>
		<filename>offline.php</filename>
		<filename>README.md</filename>
		<filename>template_thumbnail.png</filename>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.tpl_construc2.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.tpl_construc2.sys.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.tpl_construc2.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.tpl_construc2.sys.ini</language>
	</languages>

	<updateservers>
		<server type="extension">http://joomla.webmechanic.biz/tpl/construc2.xml</server>
	</updateservers>

</extension>
