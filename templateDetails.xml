	<config>
		<fields name="params">
			<fieldset name="general" addfieldpath="/templates/construct/elements" >
				<field name="customStyleSheet" type="filelist" default=""
						label="TPL_CONSTRUCT_CUSTOM_STYLE_SHEET_LABEL"
						description="TPL_CONSTRUCT_CUSTOM_STYLE_SHEET_DESC"
						directory="templates/construct/css"
						filter="\.css"
						exclude="(template|editor|tinymce|codemirror|jce|ie\d+|test.+|x~.+)\.css"
					/>
				<field name="ssiIncludes" type="radio" default="0" label="TPL_CONSTRUCT_ENABLE_APACHESSI_LABEL" description="TPL_CONSTRUCT_ENABLE_APACHESSI_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field name="ssiTheme" type="filelist" default=""
						label="SSI Theme"
						description="TPL_CONSTRUCT_ENABLE_SSITHEME_DESC"
						directory="templates/construct/themes"
						filter="\.styles"
					/>
				<field name="enableSwitcher" type="radio" default="0" label="TPL_CONSTRUCT_ENABLE_SWITCHER_LABEL" description="TPL_CONSTRUCT_ENABLE_SWITCHER_DESC">
					<option value="1">JShow</option>
					<option value="0">JHide</option>
				</field>
				<field name="showDiagnostics" type="radio" default="0" label="TPL_CONSTRUCT_ENABLE_DIAGNOSTICS_LABEL" description="TPL_CONSTRUCT_ENABLE_DIAGNOSTICS_DESC">
					<option value="1">JShow</option>
					<option value="0">JHide</option>
				</field>
				<field name="showDateContainer" type="radio" default="0" label="TPL_CONSTRUCT_ENABLE_DATECONTAINER_LABEL" description="TPL_CONSTRUCT_ENABLE_DATECONTAINER_DESC">
					<option value="1">JShow</option>
					<option value="0">JHide</option>
				</field>
				<field name="html5manifest" type="radio" default="0" label="TPL_CONSTRUCT_ENABLE_HTML5MANIFEST_LABEL" description="TPL_CONSTRUCT_ENABLE_HTML5MANIFEST_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field name="setGeneratorTag" type="text" default="" label="TPL_CONSTRUCT_CUSTOM_GENERATOR_TAG" description="TPL_CONSTRUCT_CUSTOM_GENERATOR_TAG_DESC" size="56" />
			</fieldset>

			<fieldset name="javascript">
				<field name="loadMoo" type="radio" default="1" label="TPL_CONSTRUCT_LOAD_MOO_LABEL" description="TPL_CONSTRUCT_LOAD_MOO_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field name="loadModal" type="radio" default="1" label="TPL_CONSTRUCT_LOAD_MODAL_LABEL" description="TPL_CONSTRUCT_LOAD_MODAL_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field name="loadjQuery" type="jqueryversion" default="" label="TPL_CONSTRUCT_LOAD_JQUERY_LABEL" description="TPL_CONSTRUCT_LOAD_JQUERY_DESC" />
				<field name="headCleanup" type="radio" default="0" label="TPL_CONSTRUCT_ENABLE_HEADCLEANUP_LABEL" description="TPL_CONSTRUCT_ENABLE_HEADCLEANUP_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
			</fieldset>

			<fieldset name="Layout">
				<field name="siteWidth" type="text" default="" label="TPL_CONSTRUCT_SITE_WIDTH_LABEL" description="TPL_CONSTRUCT_SITE_WIDTH_DESC" size="10" />
				<field name="siteWidthType" type="radio" default="max-width" label="TPL_CONSTRUCT_SITE_WIDTH_TYPE_LABEL" description="TPL_CONSTRUCT_SITE_WIDTH_TYPE_DESC">
					<option value="max-width">Fluid Max Width</option>
					<option value="width">Fixed Width</option>
				</field>
				<field name="siteWidthUnit" type="radio" default="em" label="TPL_CONSTRUCT_SITE_WIDTH_UNIT_LABEL" description="TPL_CONSTRUCT_SITE_WIDTH_UNIT_DESC">
					<option value="em">em</option>
					<option value="px">px</option>
					<option value="%">%</option>
				</field>
				<field name="fluidMedia" type="radio" default="0" label="TPL_CONSTRUCT_FLUID_MEDIA_LABEL" description="TPL_CONSTRUCT_FLUID_MEDIA_DESC">
				  <option value="1">JYes</option>
				  <option value="0">JNo</option>
				</field>
				<field name="fullWidth" type="radio" default="1" label="TPL_CONSTRUCT_FULL_WIDTH_LABEL" description="TPL_CONSTRUCT_FULL_WIDTH_DESC">
				  <option value="1">JYes</option>
				  <option value="0">JNo</option>
				</field>
				<field name="useStickyFooter" type="radio" default="1" label="TPL_CONSTRUCT_USE_STICKY_FOOTER_LABEL" description="TPL_CONSTRUCT_USE_STICKY_FOOTER_DESC">
        			<option value="1">On</option>
        			<option value="0">Off</option>
		    	</field>
				<field name="stickyFooterHeight" type="text" default="" label="TPL_CONSTRUCT_STICKY_FOOTER_HEIGHT_LABEL" description="TPL_CONSTRUCT_STICKY_FOOTER_HEIGHT_DESC" size="5" />
			</fieldset>

